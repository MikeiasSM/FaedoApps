<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence         http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <!-- Unidade de persistencia -->
  <persistence-unit name="PU">
    <!-- Implementação do JPA -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- Lista de entidades -->
    <class>br.com.floatsolutions.model.Usuario</class>
    <class>br.com.floatsolutions.model.Veiculo</class>
    <class>br.com.floatsolutions.model.Abastecimento</class>
    <class>br.com.floatsolutions.model.Produto</class>
    <class>br.com.floatsolutions.model.Fornecedor</class>
    <class>br.com.floatsolutions.model.Pessoa</class>
    <class>br.com.floatsolutions.model.Categoria_Produto</class>
    <class>br.com.floatsolutions.model.Fabricante_Veiculo</class>
    <properties>
      <!-- Propriedades JDBC -->
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://192.168.5.18:5432/database"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <!-- Configurações específicas do Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
